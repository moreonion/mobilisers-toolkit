---
type Props = {
	title: string;
};

const { title } = Astro.props;
---

<style>
	h1,
	p {
		margin-bottom: 0;
	}

	h1 {
		padding-top: 1rem;
	}
</style>

<header>
	{
		Astro.url.pathname !== "/" ? (
			<p>
				<a href="/">‚Üê Home</a>
			</p>
		) : (
			""
		)
	}
	<h1 class="h2">{title}</h1>
</header>
